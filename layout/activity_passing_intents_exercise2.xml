<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassingIntentsExercise2">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="623dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFname"
                android:layout_width="28dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="First Name:" />

            <EditText
                android:id="@+id/tvFname1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="fname" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLname"
                android:layout_width="22dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Last Name:" />

            <EditText
                android:id="@+id/tvLname1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="lname" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="28dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Gender:" />

            <EditText
                android:id="@+id/tvGender1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="gender" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBirthdar"
                android:layout_width="37dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Birthday" />

            <EditText
                android:id="@+id/tvBirthday1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="birthday" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="76dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Phone Number:" />

            <EditText
                android:id="@+id/tvPhone1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="phone number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="18dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Email Address:" />

            <EditText
                android:id="@+id/tvLEmail1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="email" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="28dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Height:" />

            <EditText
                android:id="@+id/tvHeight1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="height" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="28dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Weight:" />

            <EditText
                android:id="@+id/tvWeight1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="weight" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="34dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Address:" />

            <EditText
                android:id="@+id/tvAddress1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="address" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Status:" />

            <EditText
                android:id="@+id/tvStatus1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="status" />

        </LinearLayout>

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#602929"
            android:backgroundTint="#421D1D"
            android:text="RETURN"
            android:textColor="#191616" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>